# advertise site information and what user we are serving
GLIDEIN_SITE_NAME = "${siteName}"
GLIDEIN_START_TIME = "${glideinStartTime}"
JLRM_USER = "${jlrmUser}"                   

STARTER_JOB_ENVIRONMENT = GLIDEIN_SITE_NAME=${siteName};
GLIDEIN_VARIABLES= GLIDEIN_SITE_NAME,GLIDEIN_START_TIME

MAX_SLOT_TYPES = 1
SLOT_TYPE_1 = cpus=100%, memory=${requiredMemory}
